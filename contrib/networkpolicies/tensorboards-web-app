kind: NetworkPolicy
apiVersion: networking.k8s.io/v1
metadata:
  name: tensorboards-web-app
  namespace: kubeflow
spec:
  podSelector:
    matchExpressions:
      - key: app
        operator: In
        values:
          - tensorboards-web-app
  ingress:
    - from:
        - namespaceSelector:
            matchExpressions:
              - key: kubernetes.io/metadata.name
                operator: In
                values:
                  - istio-system
      ports:
        - protocol: TCP
          port: 5000
  policyTypes:
    - Ingress
